<% include ../partials/header %> 
<% include ../partials/leftpart %> 

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
		  <h1>
			Pattern List
		  </h1>
		  <ol class="breadcrumb">
			<li><a href="/"><i class="fa fa-dashboard"></i>Home</a></li>
			<li class="active">Pattern List</li>
		  </ol>
		</section>
	
		<!-- Main content -->
		<section class="content">
		
			<div class="row">
				<div class="col-md-12">
	
			  <!-- general form elements -->
			  <div class="box box-primary">
				<!-- /.box-header -->
				<!-- form start -->
	
					<% include ../partials/messagebox %> 
					
					<div class="box-header">
						<h3 class="box-title">Pattern List </h3>
					</div>
					  <!-- /.box-header -->
					  <div class="box-body no-padding">  <!-- table-responsive -->
						<table class="table table-hover">
						  <tbody><tr>
							<th>Pattern Title</th>
							<th>Pattern Description</th>
							<th>Rows</th>
							<th>Columns</th>
							<th>Status</th>
							<th>Action</th>
						  </tr>
		  
						  <%
							if(patternList!='') 
							{ 
								patternList.forEach(function(element) 
								{
								%>
								<tr id="row_<%=element._id%>">
									<td data-title="Pattern Title" class="numeric"><%=element.pattern_title%></td>
									<td data-title="Pattern Description" class="numeric"><%=element.pattern_description%></td>
									<td data-title="Rows" class="numeric"><%=element.grid_rows%></td>
									<td data-title="Columns" class="numeric"><%=element.grid_columns%></td>
									<td data-title="Status" class="numeric"><%
										if(element.pattern_status==1)
										{
										%>
											Active
										<%	
										}
										else
										{
										%>	
											InActive
										<%
										}
										%></td>
									<td data-title="Action" class="numeric action-div">
										
										<div class="btn-group">
												<button type="button" class="btn btn-info">Action</button>
												<button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown">
												  <span class="caret"></span>
												  <span class="sr-only">Toggle Dropdown</span>
												</button>
												<ul class="dropdown-menu" role="menu">
												  <li><a href="/patterns/update_pattern/<%=element._id%>">Edit</a></li>
												  <li><a href="/patterns/delete_pattern/<%=element._id%>" onclick="if (confirm('Are you sure want to Delete?')) { return true; } return false;">Delete</a></li>
												  <li><a href="/patterns/manage_pattern_grid/<%=element._id%>">Manage Pattern Design</a></li>
												</ul>
										</div>

									</td>
								</tr>
								<%
								});
							} 
							%>
						  
						</tbody></table>
		  
			  </div>
			  <!-- /.box -->
			</div>
		  </div>

		</section>
		<!-- /.content -->
	  </div>
	  <!-- /.content-wrapper -->
			
<% include ../partials/footer %> 