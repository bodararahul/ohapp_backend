<% include ../partials/leftpart %> 
<% include ../partials/header %> 

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

		<!-- Content Header (Page header) -->
		<section class="content-header">
		  <h1>Update Your Info:-</h1>
		  <ol class="breadcrumb">
			<li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
			<li class="active">Dashboard</li>
		  </ol>
      </section>
       
       	<!-- Main content -->
		<section class="content">
            <div class="panel-body box">
             <form method="post" action="/page/update">
                  <div class="form-group">
                  <label class="col-md-4">Title</label>
                    <input type="text" class="form-control" name="title" value="<%=pageValue[0]['title']%>"/>
                    </div>
                  <div class="form-group">
                      <label class="col-md-4">Status</label>
                    <input type="text" class="form-control" name="status" value="<%=pageValue[0]['status']%>"/>
                  </div>
                  <div class="form-group">
                    <label class="col-md-4">Update_time</label>
                    <input type="text" class="form-control" name="update_time" value="<%=pageValue[0]['update_time']%>"/>
                  </div>
                  <input type="hidden" name="page_id" value="<%=pageValue[0]['id']%>"/>
                  <div class="form-group">
                    <input type="submit" value="submit" class="btn btn-success">
                  </div>
              </form>
          </div>
    </section>
		<!-- /.content -->
	  </div>
	  <!-- /.content-wrapper -->
			
